<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.artgo.mail.MailDao">
	<insert id="createAuthKey" parameterType="authDto">
		insert into
		userAuth
		values (#{id}, #{authKey})
	</insert>
	
	<update id="userAuth" parameterType="authDto">
		update member
		   set confirm = 1
		 where id = #{id}
		   and (select count(*)
			   from userAuth
			   where userEmail = #{userEmail}) > 0
	</update>
</mapper>