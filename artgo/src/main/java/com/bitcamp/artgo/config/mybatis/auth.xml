<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.bitcamp.artgo.mail.dao.AuthDao">
	<insert id="createAuthKey" parameterType="authDto">
		insert into auth (id, authKey)
		values (#{id}, #{authKey})
	</insert>
	
	<update id="userAuth" parameterType="authDto">
	<!-- auth 테이블 수정, 번호 추가. -->
		update member
		   set confirm = 1
		 where id = #{id}
		   and (select count(*)
			   from auth
			   where id = #{id}
			   and authKey = #{authKey}
			   ) > 0
	</update>
	
	<delete id="deleteAuth" parameterType="String">
		delete from auth
		where id = #{id} 
	</delete>
</mapper>